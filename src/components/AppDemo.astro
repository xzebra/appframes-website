<section class="app-demo">
  <div class="container">
    <div class="screenshot-wrapper">
      <img src="/Screenshot 2025-07-27 at 20.47.03.png" alt="App Screenshot" class="app-screenshot" id="app-screenshot" />
    </div>
  </div>
</section>

<style>
  .app-demo {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .screenshot-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .app-screenshot {
    max-width: 1200px;
    width: 100%;
    height: auto;
    opacity: 0;
    transition: opacity 0.8s ease-out;
  }

  .app-screenshot.loaded {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .app-demo {
      padding: 2rem 0;
    }
    
    .app-screenshot {
      max-width: 600px;
      border-radius: 8px;
    }
  }

  @media (max-width: 480px) {
    .app-screenshot {
      max-width: 400px;
      border-radius: 6px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const appScreenshot = document.getElementById('app-screenshot') as HTMLImageElement;
    
    if (appScreenshot) {
      // Fade in when image loads
      appScreenshot.addEventListener('load', () => {
        appScreenshot.classList.add('loaded');
      });
      
      // If already cached/loaded
      if (appScreenshot.complete) {
        appScreenshot.classList.add('loaded');
      }
      
      // Fallback: show after 1 second
      setTimeout(() => {
        appScreenshot.classList.add('loaded');
      }, 1000);
    }
  });
</script>