<section class="app-demo">
  <div class="container">
    <div class="macbook-container">
      <div class="macbook-wrapper">
        <img src="/MacBook Air 13&quot; - 4th Gen - Midnight.png" alt="MacBook Air" class="macbook-bezel" />
        <div class="screen-content">
          <div class="wallpaper-background"></div>
          <img src="/Screenshot 2025-07-27 at 20.47.03.png" alt="App Screenshot" class="app-screenshot" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-demo {
    padding: 4rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .macbook-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .macbook-wrapper {
    position: relative;
    max-width: 1200px;
    width: 100%;
  }

  .macbook-bezel {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
    z-index: 3;
  }

  .screen-content {
    position: absolute;
    top: 3.2%;
    left: 10%;
    right: 10%;
    height: 80%;
    overflow: hidden;
    border-radius: 6px;
    transform: translateY(9%);
    z-index: 1;
  }

  .wallpaper-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/macos-big-sur-wallpaper-1-1536x1536.jpg');
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  .app-screenshot {
    position: relative;
    width: 90%;
    top: 8%;
    left: 5%;
    object-fit: cover;
    object-position: center top;
    z-index: 2;
  }

  @media (max-width: 1024px) {
    .macbook-wrapper {
      max-width: 900px;
    }
  }

  @media (max-width: 768px) {
    .app-demo {
      padding: 2rem 0;
    }
    
    .macbook-wrapper {
      max-width: 700px;
    }

    .screen-content {
      border-radius: 4px;
    }
  }

  @media (max-width: 480px) {
    .macbook-wrapper {
      max-width: 450px;
    }

    .screen-content {
      border-radius: 3px;
    }
  }
</style>