---
import { Picture } from 'astro:assets';
import downloadAppStore from '../images/download_appstore.png';
import downloadTestFlight from '../images/download_testflight.png';
import SmartPicture from './SmartPicture.astro';
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">
        App Store screenshots in minutes
      </h1>
      
      <p class="hero-subtitle">
        Drag and drop your screenshots, pick a catchy headline and you'll be ready to ship your app 
      </p>
      
      <div class="cta-buttons">
        <!-- <a href="#" class="mac-app-store-btn">
          <SmartPicture src={downloadAppStore} formats={['avif', 'webp']} alt="Download on the Mac App Store" height={50} />
        </a> -->

        <a href="#" class="mac-app-store-btn">
          <SmartPicture src={downloadTestFlight} formats={['avif', 'webp']} alt="Join the TestFlight" height={50} />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 4rem 0 2rem;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }


  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1.1;
    color: #111827;
    margin-bottom: 1.5rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .mac-app-store-btn {
    display: inline-block;
    transition: all 0.2s;
  }

  .mac-app-store-btn:hover {
    transform: scale(1.02);
  }

  .availability {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0 4rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>