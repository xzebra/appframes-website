<style>
  .appstore-showcase {
    background: #f8f9fa;
    border-radius: 16px;
    padding: 2rem;
    overflow: hidden;
  }
  
  .app-header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    gap: 1rem;
  }
  
  .app-icon-mock {
    width: 50px;
    height: 50px;
    background: #e5e7eb;
    border-radius: 12px;
    flex-shrink: 0;
  }
  
  .app-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .title-mock {
    width: 120px;
    height: 18px;
    background: #d1d5db;
    border-radius: 4px;
  }
  
  .subtitle-mock {
    width: 90px;
    height: 14px;
    background: #e5e7eb;
    border-radius: 3px;
  }
  
  .rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }
  
  .stars {
    color: #d1d5db;
    font-size: 0.875rem;
  }
  
  .rating-count-mock {
    width: 25px;
    height: 12px;
    background: #e5e7eb;
    border-radius: 3px;
  }
  
  .download-button {
    padding: 0.25rem 1rem;
    background: #e5e7eb;
    color: #d1d5db;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .screenshots-marquee {
    overflow: hidden;
    position: relative;
  }
  
  .marquee-track {
    display: flex;
    gap: 1rem;
    width: calc(180px * 12 + 1rem * 11);
    animation: marqueeScroll 30s linear infinite;
  }
  
  .screenshot-card {
    width: 180px;
    height: 320px;
    border-radius: 24px;
    padding: 1rem;
    flex-shrink: 0;
    overflow: hidden;
  }
  
  .screenshot-card.red {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  }
  
  .screenshot-card.blue {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  }
  
  .screenshot-card.green {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }
  
  .screenshot-card.yellow {
    background: linear-gradient(135deg, #eab308 0%, #ca8a04 100%);
  }
  
  .screenshot-card.orange {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  }
  
  .screenshot-card.purple {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }
  
  .screenshot-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .screenshot-main {
    flex: 1;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    min-height: 200px;
  }

  .top > .screenshot-main {
    translate: 0 -30px;
    transform: scaleY(1.1);
  }

  .bottom > .screenshot-main {
    translate: 0 30px;
    transform: scaleY(1.1);
  }
  
  .screenshot-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.5rem 0;
  }

  .leading > .screenshot-text {
    align-items: flex-start;
  }

  .trailing > .screenshot-text {
    align-items: flex-end;
  }

  .center > .screenshot-text {
    align-items: center;
  }
  
  .text-line {
    height: 12px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
  }
  
  .text-line.long {
    width: 90%;
  }
  
  .text-line.medium {
    width: 70%;
  }
  
  .text-line.short {
    width: 50%;
  }
  
  @keyframes marqueeScroll {
    0% { 
      transform: translateX(0); 
    }
    100% { 
      transform: translateX(calc(-180px * 6 - 1rem * 5)); 
    }
  }
  
  @media (max-width: 768px) {
    .appstore-showcase {
      padding: 1.5rem;
    }
    
    .screenshot-card {
      width: 140px;
      height: 280px;
    }
    
    .marquee-track {
      width: calc(140px * 12 + 1rem * 11);
    }
    
    @keyframes marqueeScroll {
      0% { 
        transform: translateX(0); 
      }
      100% { 
        transform: translateX(calc(-140px * 6 - 1rem * 5)); 
      }
    }
  }
</style>