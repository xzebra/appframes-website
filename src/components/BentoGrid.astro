<style>
  .bento-section {
    padding: 6rem 0;
    background: #fafbfc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 700;
    color: #111827;
    line-height: 1.1;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(3, 300px);
    gap: 1.5rem;
  }

  .bento-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid #e5e7eb;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .bento-card.chart {
    padding: 0;
  }

  .bento-card.chart .card-content {
    padding: 2rem;
    position: relative;
    z-index: 2;
    height: 100%;
  }

  .bento-card.chart .card-content::before {
    content: '';
    position: absolute;
    top: 60%;
    left: 0;
    right: 0;
    bottom: 0;
    height: 40%;
    background: linear-gradient(90deg, transparent 0%, rgba(16, 185, 129, 0.15) 100%);
    border-radius: 8px;
    z-index: -1;
    mask: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.5) 15%, rgba(0,0,0,1) 40%);
    -webkit-mask: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.5) 15%, rgba(0,0,0,1) 40%);
  }

  .bento-card.chart .card-content .chart-points {
    position: absolute;
    top: 60%;
    left: 0;
    right: 0;
    bottom: 0;
    height: 40%;
    z-index: -1;
  }

  .bento-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
  }

  .bento-card.large {
    grid-column: span 7;
    grid-row: span 2;
  }

  .bento-card.medium {
    grid-column: span 5;
    grid-row: span 1;
  }

  .bento-card.chart {
    grid-column: span 5;
    grid-row: span 1;
  }

  .bento-card.wide {
    grid-column: span 7;
    grid-row: span 1;
  }

  .card-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.75rem;
  }

  .card-content p {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .card-visual {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1rem;
  }

  .card-visual.chart-with-stats {
    align-items: stretch;
    justify-content: stretch;
  }

  /* Phone Mockup */
  .mockup-phone {
    width: 180px;
    height: 360px;
    background: #000;
    border-radius: 30px;
    padding: 8px;
    position: relative;
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: #f8fafc;
    border-radius: 22px;
    overflow: hidden;
  }

  .notch {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 25px;
    background: #000;
    border-radius: 0 0 15px 15px;
  }

  .status-bar {
    text-align: center;
    padding: 8px;
    font-size: 12px;
    font-weight: 600;
  }

  .app-preview {
    padding: 20px;
    text-align: center;
  }

  .app-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    margin: 0 auto 10px;
  }

  .app-preview h4 {
    font-size: 14px;
    margin-bottom: 5px;
  }

  .rating-stars {
    color: #fbbf24;
    font-size: 12px;
    margin-bottom: 20px;
  }

  .screenshots-grid {
    display: flex;
    gap: 8px;
    justify-content: center;
  }

  .mini-screenshot {
    width: 40px;
    height: 70px;
    background: #e5e7eb;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .mini-screenshot.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: scale(1.1);
  }

  /* Localization Demo */
  .localization-demo {
    width: 100%;
  }

  .language-tabs {
    display: flex;
    gap: 8px;
    margin-bottom: 20px;
    justify-content: center;
  }

  .tab {
    padding: 8px 16px;
    background: #f3f4f6;
    border-radius: 20px;
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .tab.active {
    background: #7c3aed;
    color: white;
  }

  .translated-content {
    text-align: center;
  }

  .text-line {
    height: 12px;
    background: #e5e7eb;
    border-radius: 6px;
    margin: 8px auto;
    width: 80%;
  }

  .text-line.short {
    width: 60%;
  }

  /* A/B Testing Demo */
  .ab-testing-demo {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 100%;
    justify-content: center;
  }

  .variant {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .variant-label {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 14px;
  }

  .variant-content {
    width: 80px;
    height: 100px;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }

  .variant-content.blue {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  }

  .variant-content.purple {
    background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  }

  .variant:hover .variant-content {
    transform: scale(1.05);
  }

  .vs {
    font-weight: 600;
    color: #6b7280;
    font-size: 14px;
  }

  /* Chart with Stats Overlay */
  .chart-with-stats {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .chart-background {
    position: absolute;
    top: 60%;
    left: -2rem;
    right: -2rem;
    bottom: -2rem;
    width: calc(100% + 4rem);
    height: calc(40% + 4rem);
    opacity: 0.8;
    z-index: 1;
    mask: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.5) 15%, rgba(0,0,0,1) 40%);
    -webkit-mask: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.5) 15%, rgba(0,0,0,1) 40%);
  }

  .stats-overlay {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    margin-top: 1rem;
  }

  .percentage {
    font-size: 3rem;
    font-weight: 700;
    color: #10b981;
    line-height: 1;
    text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
  }

  .metric {
    color: #374151;
    font-size: 0.875rem;
    margin-top: 0.5rem;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
  }

  /* Chart */
  .chart-line {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent 0%, rgba(16, 185, 129, 0.15) 100%);
    border-radius: 8px;
  }

  .chart-point {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #10b981;
    border-radius: 50%;
    border: 3px solid white;
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
  }

  .chart-point.active {
    width: 16px;
    height: 16px;
    background: #059669;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  /* Upload Demo */
  .upload-demo {
    display: flex;
    align-items: center;
    gap: 2rem;
    width: 100%;
    justify-content: center;
  }

  .file-stack {
    position: relative;
    width: 60px;
    height: 50px;
  }

  .file {
    width: 40px;
    height: 50px;
    background: #f3f4f6;
    border: 2px solid #d1d5db;
    border-radius: 6px;
    position: absolute;
  }

  .file:nth-child(1) {
    transform: rotate(-8deg);
    z-index: 1;
  }

  .file:nth-child(2) {
    transform: rotate(0deg);
    z-index: 2;
    left: 8px;
    background: white;
  }

  .file:nth-child(3) {
    transform: rotate(8deg);
    z-index: 3;
    left: 16px;
    background: #7c3aed;
    border-color: #7c3aed;
  }

  .curved-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: visible;
  }

  .curved-arrow video {
    background: transparent;
    opacity: 0.8;
  }

  .arrow-path {
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
    animation: drawArrow 3s ease-in-out infinite;
  }

  .arrow-tip {
    opacity: 0;
    animation: showTip 3s ease-in-out infinite;
  }

  @keyframes drawArrow {
    0% { stroke-dashoffset: 100; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -100; }
  }

  @keyframes showTip {
    0% { opacity: 0; }
    45% { opacity: 0; }
    50% { opacity: 1; }
    55% { opacity: 1; }
    100% { opacity: 0; }
  }

  .appstore-connect {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .asc-logo {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    transition: transform 0.3s ease;
  }

  .asc-logo:hover {
    transform: scale(1.1);
  }

  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: repeat(6, 1fr);
      grid-template-rows: auto;
    }

    .bento-card.large {
      grid-column: span 6;
    }

    .bento-card.medium,
    .bento-card.chart,
    .bento-card.wide {
      grid-column: span 6;
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .bento-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .bento-card {
      grid-column: span 1;
      padding: 1.5rem;
    }

    .card-content h3 {
      font-size: 1.25rem;
    }
  }
</style>