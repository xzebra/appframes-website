---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';

const { frontmatter } = Astro.props;
const { pathname } = Astro.url;
---

<Layout title={frontmatter.title}>
  <Header />
  <main>
    <div class="docs-container">
      <aside class="sidebar">
        <nav>
          <h3>Guides</h3>
          <ul>
            <li><a href="/docs/getting-started" class={pathname === '/docs/getting-started' ? 'active' : ''}>Getting Started</a></li>
            <li><a href="/docs/creating-mockups" class={pathname === '/docs/creating-mockups' ? 'active' : ''}>Creating Mockups</a></li>
            <li><a href="/docs/templates" class={pathname === '/docs/templates' ? 'active' : ''}>Templates</a></li>
          </ul>
          <h3>Reference</h3>
          <ul>
            <li><a href="/docs/api" class={pathname === '/docs/api' ? 'active' : ''}>API Reference</a></li>
            <li><a href="/docs/features" class={pathname === '/docs/features' ? 'active' : ''}>Features</a></li>
          </ul>
          <div class="back-to-docs">
            <a href="/docs">‚Üê Back to Docs</a>
          </div>
        </nav>
      </aside>
      
      <div class="content">
        <slot />
      </div>
    </div>
  </main>
</Layout>

<style>
  .docs-container {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 80vh;
  }
  
  .sidebar {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 8px;
    height: fit-content;
  }
  
  .sidebar nav h3 {
    margin: 0 0 1rem 0;
    color: #374151;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .sidebar nav h3:not(:first-child) {
    margin-top: 2rem;
  }
  
  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .sidebar li {
    margin-bottom: 0.5rem;
  }
  
  .sidebar a {
    color: #6b7280;
    text-decoration: none;
    padding: 0.25rem 0;
    display: block;
    transition: color 0.2s;
  }
  
  .sidebar a:hover,
  .sidebar a.active {
    color: #111827;
    font-weight: 500;
  }
  
  .back-to-docs {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #e5e7eb;
  }
  
  .back-to-docs a {
    color: #3b82f6;
    font-size: 0.875rem;
  }
  
  .content {
    padding: 0 1rem;
  }
  
  /* Markdown content styling */
  :global(.content h1) {
    color: #111827;
    margin-bottom: 1rem;
  }
  
  :global(.content h2) {
    color: #111827;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  :global(.content h3) {
    color: #374151;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  :global(.content p),
  :global(.content li) {
    color: #6b7280;
    line-height: 1.6;
  }
  
  :global(.content ul),
  :global(.content ol) {
    margin-bottom: 1rem;
  }
  
  :global(.content li) {
    margin-bottom: 0.25rem;
  }
  
  :global(.content a) {
    color: #3b82f6;
    text-decoration: none;
  }
  
  :global(.content a:hover) {
    text-decoration: underline;
  }
  
  :global(.content strong) {
    color: #374151;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .docs-container {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;
    }
    
    .sidebar {
      order: 2;
    }
  }
</style>