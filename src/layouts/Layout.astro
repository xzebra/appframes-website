---
import favicon from '/public/favicon.svg';
import screenshotLight from '../images/Screenshot_light.png';
import macosLogo from '../images/macOS-logo.svg';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Fastest way to improve your App Store screenshots" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    <link rel="preload" as="image" href={screenshotLight.src} />
    <link rel="preload" as="image" href={macosLogo.src} />
    <script src="https://unpkg.com/@lottiefiles/dotlottie-wc@0.6.2/dist/dotlottie-wc.js" type="module" defer></script>
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Apple Colors - Light Mode */
    --apple-red: rgb(255, 56, 60);
    --apple-red-contrast: rgb(233, 21, 45);
    --apple-orange: rgb(255, 141, 40);
    --apple-orange-contrast: rgb(197, 83, 0);
    --apple-yellow: rgb(255, 204, 0);
    --apple-yellow-contrast: rgb(161, 106, 0);
    --apple-green: rgb(52, 199, 89);
    --apple-green-contrast: rgb(0, 137, 50);
    --apple-mint: rgb(0, 200, 179);
    --apple-mint-contrast: rgb(0, 133, 117);
    --apple-teal: rgb(0, 195, 208);
    --apple-teal-contrast: rgb(0, 129, 152);
    --apple-cyan: rgb(0, 192, 232);
    --apple-cyan-contrast: rgb(0, 126, 174);
    --apple-blue: rgb(0, 136, 255);
    --apple-blue-contrast: rgb(30, 110, 244);
    --apple-indigo: rgb(97, 85, 245);
    --apple-indigo-contrast: rgb(86, 74, 222);
    --apple-purple: rgb(203, 48, 224);
    --apple-purple-contrast: rgb(176, 47, 194);
    --apple-pink: rgb(255, 45, 85);
    --apple-pink-contrast: rgb(231, 18, 77);
    --apple-brown: rgb(172, 127, 94);
    --apple-brown-contrast: rgb(149, 109, 81);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  body {
    color: #333;
    line-height: 1.6;
  }
</style>