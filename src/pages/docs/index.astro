---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getDocsCards, generateTOC } from '../../utils/docsTOC.js';

const docsCards = getDocsCards();
const tocSections = generateTOC();
const { pathname } = Astro.url;
---

<Layout title="AppFrames Documentation">
  <Header />
  <main>
    <div class="docs-container">
      <aside class="sidebar">
        <nav>
          {tocSections.map(section => (
            <>
              <h3>{section.title}</h3>
              <ul>
                {section.pages.map(page => (
                  <li>
                    <a href={page.route} class={pathname === page.route ? 'active' : ''}>
                      {page.title}
                    </a>
                  </li>
                ))}
              </ul>
            </>
          ))}
        </nav>
      </aside>
      
      <div class="content">
        <h1>Welcome to AppFrames Documentation</h1>
        
        <p>AppFrames is your go-to tool for creating stunning app screenshots and mockups for the Mac App Store and marketing materials.</p>
        
        <div class="card-grid">
          {docsCards.map(card => (
            <div class="card">
              <h3>{card.emoji} {card.shortTitle}</h3>
              <p>{card.shortDescription}</p>
              <a href={card.route}>{card.cta} â†’</a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .docs-container {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 80vh;
  }
  
  .sidebar {
    background: #f8fafc;
    padding: 1.5rem;
    border-radius: 8px;
    height: fit-content;
  }
  
  .sidebar nav h3 {
    margin: 0 0 1rem 0;
    color: #374151;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .sidebar nav h3:not(:first-child) {
    margin-top: 2rem;
  }
  
  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .sidebar li {
    margin-bottom: 0.5rem;
  }
  
  .sidebar a {
    color: #6b7280;
    text-decoration: none;
    padding: 0.25rem 0;
    display: block;
    transition: color 0.2s;
  }
  
  .sidebar a:hover,
  .sidebar a.active {
    color: #111827;
    font-weight: 500;
  }
  
  .content {
    padding: 0 1rem;
  }
  
  .content h1 {
    color: #111827;
    margin-bottom: 1rem;
  }
  
  .content p {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }
  
  .card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1.5rem;
    transition: box-shadow 0.2s;
  }
  
  .card:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .card h3 {
    margin: 0 0 0.5rem 0;
    color: #111827;
  }
  
  .card p {
    color: #6b7280;
    font-size: 0.875rem;
    margin: 0 0 1rem 0;
  }
  
  .card a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
  }
  
  .card a:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .docs-container {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;
    }
    
    .sidebar {
      order: 2;
    }
  }
</style>